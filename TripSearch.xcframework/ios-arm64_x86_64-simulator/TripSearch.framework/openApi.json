  "paths": {
    "/health": {
      "get": {
        "summary": "Health",
        "tags": [
          "internal"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/vnd.api+json": {
                "schema": {
                  "description": "",
                  "type": "object",
                  "x-examples": {
                    "example-1": {
                      "meta": {
                        "status": "ok"
                      }
                    }
                  },
                  "properties": {
                    "meta": {
                      "type": "object",
                      "required": [
                        "status"
                      ],
                      "properties": {
                        "status": {
                          "type": "string",
                          "description": "Health status",
                          "enum": [
                            "pass",
                            "fail",
                            "warn"
                          ]
                        }
                      }
                    }
                  },
                  "required": [
                    "meta"
                  ]
                }
              }
            }
          }
